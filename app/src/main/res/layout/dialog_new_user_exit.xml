<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_80">

    <TextView
        android:id="@+id/tv_new_user_exit_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_new_user_exit_hint"
        android:lineSpacingExtra="10dp"
        android:text="每天到应用市场签到，可参加抽奖活动\n小编也会定期上新应用，要经常回来看看哦~"
        android:textColor="#313131"
        android:textSize="20sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_exit_qr_cord"
        android:layout_width="242dp"
        android:layout_height="242dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_new_user_exit_hint"
        android:layout_marginRight="462dp"
        android:layout_marginTop="55dp"
        fresco:actualImageScaleType="fitXY"
        fresco:backgroundImage="@color/white"
        fresco:placeholderImage="@drawable/tv_attention"
        fresco:placeholderImageScaleType="fitXY" />

    <TextView
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sd_exit_qr_cord"
        android:layout_marginRight="462dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/exit_hint"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon_new_user_exit" />

    <LinearLayout
        android:id="@+id/ll_update_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:layout_marginLeft="464dp"
        android:layout_marginRight="340dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_dialog_new_user_exit_stay_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/com_btn_blue_focus_selector"
            android:text="再玩一会"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/comm_text_size_little" />


        <Button
            android:id="@+id/bt_dialog_new_user_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:background="@drawable/com_btn_blue_focus_selector"
            android:text="直接退出"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/comm_text_size_little" />
    </LinearLayout>


</RelativeLayout>