<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="443dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/common_bg_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/pay_txt_dialog_title"
            android:textSize="@dimen/comm_text_size_middle" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/ly_diaolog_pay_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_dialog_cancel"
                    style="@style/PayBtnFull"
                    android:text="Button">

                    <requestFocus />
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_diaolog_pay_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_dialog_ok"
                    style="@style/PayBtnFull"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>