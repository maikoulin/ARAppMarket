<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="30dip"
    tools:context="com.winhearts.activity.AdvertisementActivity">

    <RelativeLayout
        android:layout_width="@dimen/ad_width"
        android:layout_height="@dimen/ad_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_ad_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:focusable="true" />

        <ImageView
            android:id="@+id/iv_ad_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ad_bottom"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_ad_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/ad_time_bg"
            android:gravity="center"
            android:text="5s"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>
</RelativeLayout>