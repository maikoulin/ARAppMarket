<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="13dp"
    android:layout_height="360dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_category_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:placeholderImage="@drawable/comm_card_default"
        fresco:placeholderImageScaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7f000000" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sd_category_item_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            fresco:placeholderImage="@drawable/background_app_icon"
            fresco:placeholderImageScaleType="fitXY" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/sd_category_item_icon"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/sd_category_item_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_category_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>