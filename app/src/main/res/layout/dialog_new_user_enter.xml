<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_80"
    android:clipChildren="false">

    <TextView
        android:id="@+id/tv_new_user_exit_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_new_user_exit_hint"
        android:gravity="center_vertical"
        android:lineSpacingExtra="10dp"
        android:paddingTop="10dp"
        android:text="终于等到你~\n快安装小编精心为您推荐的装机必备吧~"
        android:textColor="#313131"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/iv_new_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon_new_user" />

    <com.winhearts.arappmarket.view.RecommendAppGridView
        android:id="@+id/rcv_ner_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_new_user_exit_hint"
        android:layout_marginRight="187dp"
        android:layout_toRightOf="@id/iv_new_user_icon"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants" />

    <LinearLayout
        android:id="@+id/ll_update_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcv_ner_user"
        android:layout_marginLeft="507dp"
        android:layout_marginRight="298dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_dialog_new_user_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/com_btn_blue_focus_selector"
            android:nextFocusRight="@id/bt_dialog_new_user_no_thank"
            android:text="一键安装"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/comm_text_size_little" />


        <Button
            android:id="@+id/bt_dialog_new_user_no_thank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:background="@drawable/com_btn_blue_focus_selector"
            android:nextFocusLeft="@id/bt_dialog_new_user_install"
            android:text="不了，谢谢"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/comm_text_size_little" />
    </LinearLayout>


</RelativeLayout>