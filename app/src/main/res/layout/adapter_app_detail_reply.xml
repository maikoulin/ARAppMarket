<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_detail_evaluate_selector"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_reply_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_reply_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_reply_item_name"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@id/tv_reply_item_name"
        android:layout_toRightOf="@id/tv_reply_item_name"
        android:textColor="#c1c1c1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_reply_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_reply_item_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_reply_item_content"
        android:layout_marginTop="8dp"
        android:background="@color/black_tran" />
</RelativeLayout>